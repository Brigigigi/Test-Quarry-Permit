<%- include('../partials/head') %>

<div class="bg-white rounded-lg shadow p-6">
  <h1 class="text-xl font-semibold mb-4">Apply for Quarry Permit</h1>
  <form action="/apply" method="post" enctype="multipart/form-data" class="space-y-6">
    <div>
      <h2 class="font-semibold text-slate-700 mb-2">Applicant Information</h2>
      <div class="grid md:grid-cols-2 gap-4">
        <label class="block">
          <span class="text-sm text-slate-600">Full Name</span>
          <input name="fullName" required class="mt-1 input" />
        </label>
        <label class="block">
          <span class="text-sm text-slate-600">Organization (optional)</span>
          <input name="org" class="mt-1 input" />
        </label>
        <label class="block">
          <span class="text-sm text-slate-600">Email</span>
          <input name="email" type="email" required class="mt-1 input" />
        </label>
        <label class="block">
          <span class="text-sm text-slate-600">Phone</span>
          <input name="phone" required class="mt-1 input" />
        </label>
        <label class="block md:col-span-2">
          <span class="text-sm text-slate-600">Address</span>
          <input name="address" required class="mt-1 input" />
        </label>
        <label class="block">
          <span class="text-sm text-slate-600">ID Type</span>
          <input name="idType" class="mt-1 input" />
        </label>
        <label class="block">
          <span class="text-sm text-slate-600">ID Number</span>
          <input name="idNumber" class="mt-1 input" />
        </label>
      </div>
    </div>

    <div>
      <h2 class="font-semibold text-slate-700 mb-2">Quarry Site</h2>
      <div class="grid md:grid-cols-2 gap-4">
        <label class="block">
          <span class="text-sm text-slate-600">Site Name</span>
          <input name="siteName" required class="mt-1 input" />
        </label>
        <label class="block">
          <span class="text-sm text-slate-600">Barangay</span>
          <input name="barangay" required class="mt-1 input" />
        </label>
        <label class="block">
          <span class="text-sm text-slate-600">Municipality/City</span>
          <input name="municipality" required class="mt-1 input" />
        </label>
        <label class="block">
          <span class="text-sm text-slate-600">Province</span>
          <input name="province" required class="mt-1 input" />
        </label>
        <label class="block md:col-span-2">
          <span class="text-sm text-slate-600">Coordinates (optional)</span>
          <input name="coordinates" class="mt-1 input" placeholder="e.g., 16.401, 120.596" />
        </label>
      </div>
    </div>

    <div>
      <h2 class="font-semibold text-slate-700 mb-2">Request Details</h2>
      <div class="grid md:grid-cols-3 gap-4">
        <label class="block">
          <span class="text-sm text-slate-600">Material</span>
          <input name="material" required class="mt-1 input" placeholder="e.g., sand, gravel" />
        </label>
        <label class="block">
          <span class="text-sm text-slate-600">Volume</span>
          <input name="volume" required class="mt-1 input" placeholder="e.g., 150" />
        </label>
        <label class="block">
          <span class="text-sm text-slate-600">Unit</span>
          <select name="unit" class="mt-1 input">
            <option value="m3">mÂ³</option>
            <option value="ton">ton</option>
          </select>
        </label>
      </div>
      <div class="grid md:grid-cols-2 gap-4 mt-3">
        <label class="block">
          <span class="text-sm text-slate-600">Purpose</span>
          <input name="purpose" class="mt-1 input" />
        </label>
        <label class="block">
          <span class="text-sm text-slate-600">Equipment</span>
          <input name="equipment" class="mt-1 input" />
        </label>
        <label class="block">
          <span class="text-sm text-slate-600">Start Date</span>
          <input name="startDate" type="date" class="mt-1 input" />
        </label>
        <label class="block">
          <span class="text-sm text-slate-600">End Date</span>
          <input name="endDate" type="date" class="mt-1 input" />
        </label>
      </div>
    </div>

    <div>
      <h2 class="font-semibold text-slate-700 mb-2">Attachments</h2>
      <input type="file" name="attachments" multiple class="block w-full text-sm text-slate-600" />
      <p class="text-xs text-slate-500 mt-1">Upload up to 5 files (max few MB each).</p>
    </div>

    <div class="pt-2">
      <button class="px-5 py-2.5 rounded bg-indigo-600 text-white hover:bg-indigo-700">Submit Application</button>
    </div>
  </form>
</div>

<%- include('../partials/foot') %>

